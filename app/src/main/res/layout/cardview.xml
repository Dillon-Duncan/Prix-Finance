<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/bg_night"
        app:cardCornerRadius="25dp"
       >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
            <TableRow
                android:id="@+id/rowBudgetName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/cardName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Budget Name"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp"/>
            </TableRow>

             <TableRow
                 android:id="@+id/rowBudgetBalance"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="3">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/txt_Currency"
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:textStyle="bold"
                     android:layout_marginStart="20dp"/>

                 <TextView
                     android:id="@+id/cardBalance"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="15sp"
                     android:textColor="@color/white"
                     android:text=""
                     android:layout_marginStart="35dp"/>
             </TableRow>

             <TableRow
                 android:id="@+id/rowBudgetStatus"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="3">
                 <TextView
                     android:id="@+id/cardStatus"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textStyle="bold"
                     android:text="Budget Status"
                     android:textSize="15sp"
                     android:textColor="@color/white"
                     android:layout_marginEnd="20dp"
                     android:layout_marginStart="280dp"/>
             </TableRow>

             <TableRow
                 android:id="@+id/rowSpacer"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="3">
                 <Space
                     android:layout_width="match_parent"
                     android:layout_height="100dp"/>
             </TableRow>
         </LinearLayout>

    </androidx.cardview.widget.CardView>
